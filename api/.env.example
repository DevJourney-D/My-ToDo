# ===========================================
# My Todo App - Backend API Configuration
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=my_todo_db
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DATABASE_URL=postgresql://your_db_username:your_db_password@localhost:5432/my_todo_db

# Alternative database settings for different environments
# DB_SSL=true
# DB_MAX_CONNECTIONS=20
# DB_IDLE_TIMEOUT=30000
# DB_CONNECTION_TIMEOUT=2000

# JWT Authentication Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_random_at_least_64_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_jwt_key_different_from_main_jwt_secret
JWT_REFRESH_EXPIRES_IN=30d
JWT_ALGORITHM=HS256

# Password Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=6
PASSWORD_RESET_EXPIRES=3600000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE=Too many requests from this IP, please try again later.

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Email Configuration (for notifications, password reset, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
FROM_EMAIL=noreply@mytodoapp.com
FROM_NAME=My Todo App

# Email Templates
EMAIL_VERIFICATION_TEMPLATE=verification
PASSWORD_RESET_TEMPLATE=password_reset
WELCOME_EMAIL_TEMPLATE=welcome

# Logging Configuration
LOG_LEVEL=info
LOG_RETENTION_DAYS=90
LOG_MAX_FILE_SIZE=10MB
LOG_MAX_FILES=5
LOG_FORMAT=combined

# Security Headers
HELMET_ENABLED=true
SESSION_SECRET=your_session_secret_here_different_from_jwt_secrets

# Data Management
AUTO_CLEANUP_ENABLED=true
AUTO_CLEANUP_INTERVAL=24h
LOG_CLEANUP_DAYS=90
BACKUP_RETENTION_DAYS=30

# Performance Settings
REQUEST_TIMEOUT=30000
BODY_LIMIT=10mb
COMPRESSION_ENABLED=true

# Analytics & Monitoring
ANALYTICS_ENABLED=true
PERFORMANCE_MONITORING=true
ERROR_REPORTING=true

# Feature Flags
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_REAL_TIME_SYNC=false
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_DATA_EXPORT=true
FEATURE_BULK_OPERATIONS=true

# External API Keys (optional, for future integrations)
# OPENAI_API_KEY=your_openai_api_key
# GOOGLE_API_KEY=your_google_api_key
# SLACK_WEBHOOK_URL=your_slack_webhook_url
# DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Development Settings (only for development environment)
DEBUG_ENABLED=false
DEBUG_SQL_QUERIES=false
MOCK_EMAIL_ENABLED=false
SEED_DATABASE=false

# Production Settings (override these in production)
# NODE_ENV=production
# DB_SSL=true
# LOG_LEVEL=warn
# DEBUG_ENABLED=false
# CORS_ORIGIN=https://yourdomain.com

# Health Check Settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# API Documentation
API_DOCS_ENABLED=true
API_VERSION=1.0.0
API_TITLE=My Todo App API
API_DESCRIPTION=A comprehensive todo management API with advanced features
