{
  "name": "my-todo-app",
  "version": "1.0.0",
  "description": "Full-stack Todo application with Next.js frontend and Express.js backend",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd api && npm run dev",
    "dev:web": "cd web && npm run dev",
    "build": "cd web && npm run build",
    "start": "concurrently \"npm run start:api\" \"npm run start:web\"",
    "start:api": "cd api && npm start",
    "start:web": "cd web && npm start",
    "install:all": "npm install && cd api && npm install && cd ../web && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "api",
    "web"
  ],
  "keywords": ["todo", "fullstack", "nextjs", "express", "postgresql"],
  "author": "Your Name",
  "license": "MIT"
}
